<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SendFirstChar</servlet-name>
        <servlet-class>SendFirstChar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>Servlet.TestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddAnswerServlet</servlet-name>
        <servlet-class>Servlet.AddAnswerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StartSingleModeGameServlet</servlet-name>
        <servlet-class>Servlet.StartSingleModeGameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetMeaningServlet</servlet-name>
        <servlet-class>Servlet.GetMeaningServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GameOver</servlet-name>
        <servlet-class>Servlet.GameOver</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckScopeServlet</servlet-name>
        <servlet-class>Servlet.CheckScopeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckAnswerServlet</servlet-name>
        <servlet-class>Servlet.CheckAnswerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/TestServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddAnswerServlet</servlet-name>
        <url-pattern>/AddAnswerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StartSingleModeGameServlet</servlet-name>
        <url-pattern>/StartSingleModeGameServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetMeaningServlet</servlet-name>
        <url-pattern>/GetMeaningServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GameOver</servlet-name>
        <url-pattern>/GameOver</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckScopeServlet</servlet-name>
        <url-pattern>/CheckScopeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckAnswerServlet</servlet-name>
        <url-pattern>/CheckAnswerServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
